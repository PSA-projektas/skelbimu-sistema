@{
    ViewData["Title"] = "Skelbimų sąrašas";
}

<div class="card justify-content-center m-5 p-4">
    <h1 class="text-center">Produktai</h1>
    <p class="text-center">Sistemos produktų sąrašas.</p>
    <table class="table table-striped table-bordered table-hover">
        <thead class="bg-primary text-white">
            <tr>
                <th>Id</th>
                <th>Pavadinimas</th>
                <th>Aprašymas</th>
                <th>Kaina</th>
                <th>Nuotrauka</th>
                <th>Pradžios data</th>
                <th>Pabaigos data</th>
                <th>Kategorija</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                    <td><img src="@product.ImageUrl" alt="Product Image" width="100" height="100"></td>
                    <td>@product.StartDate</td>
                    <td>@product.EndDate</td>
                    <td>@product.category</td>
                </tr>
            }
        </tbody>
    </table>
</div>
