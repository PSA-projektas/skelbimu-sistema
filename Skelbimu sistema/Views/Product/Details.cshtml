@model Skelbimu_sistema.Models.Product

@{
    ViewData["Title"] = "Skelbimo peržiūra";
}



<div class="container">
    <h1>Product Details</h1>
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p>Aprašymas: @Model.Description</p>
            <p>Kaina: $@Model.Price</p>
            <p>Category: @Model.Category</p>
            
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Grįžti.</a>
        </div>
    </div>
</div>
