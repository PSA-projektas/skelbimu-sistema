<div class="container">
    <h1>Skelbimo aprašymas</h1>
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p>Aprašymas: @Model.Description</p>
            <p>Kaina: $@Model.Price</p>
            <p>Kategorija: @Model.Category</p>
            <p>Pardavėjo id: @Model.UserId</p>

            @if (Model.Creator != null)
            {
                <p>Pardavėjo vardas: @Model.Creator.FirstName</p>
                <p>Pardavėjo pavardė: @Model.Creator.LastName</p>
                <p>Pardavėjo telefono numeris: @Model.Creator.PhoneNumber</p>
            }

            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Grįžti.</a>
        </div>
    </div>
</div>
