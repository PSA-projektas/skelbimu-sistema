@{
    ViewData["Title"] = "Administracijos skelbimų sąrašas";
}

<div class="card justify-content-center m-5 p-4">
    <h1 class="text-center">Skelbimai</h1>
    <p class="text-center">Sistemos skelbimų sąrašas.</p>
    <div class="row px-3 mb-2">
        <a class="btn btn-primary" href="/admin/adverts">Valyti filtrus</a>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead class="bg-primary text-white">
            <tr>
                <th>Id</th>
                <th>Pavadinimas</th>
                <th>Pardavėjas</th>
                <th><a class="text-white" href="/admin/adverts?filter=suspended">Suspenduotas</a></th>
                <th><a class="text-white" href="/admin/adverts?filter=reported">Perspėjimų skaičius</a></th>
                <th>Veiksmai</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var advert in Model)
            {
                        <tr>
                            <td>@advert.Id</td>
                            <td>@advert.Title</td>
                                <td><a href="/admin/adverts?sellerId=@advert.SellerId">@advert.SellerName</a></td>
                            <td>@advert.Suspended</td>
                            <td>@advert.NumberOfReports</td>
                            <td>
                                <a href="/user/details/@advert.SellerId" title="Peržiūrėti pardavėjo paskyrą"><i class="bi bi-file-person-fill"></i></a>
                                <a href="/admin/adverts" title="Peržiūrėti skelbimą"><i class="bi bi-file-richtext-fill"></i></a>
                                <a href="/admin/adverts" title="Peržiūrėti skelbimo perspėjimus"><i class="bi bi-file-x-fill"></i></a>
                            </td>
                        </tr>
            }
        </tbody>
    </table>
</div>