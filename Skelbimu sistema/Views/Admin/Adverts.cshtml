@{
    ViewData["Title"] = "Administracijos skelbimų sąrašas";
}

<div class="card justify-content-center m-5 p-4">
    <h1 class="text-center">Skelbimai</h1>
    <p class="text-center">Sistemos skelbimų sąrašas.</p>
    <div class="row px-3 mb-2">
        <a class="btn btn-primary" href="/admin/adverts">Valyti filtrus</a>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead class="bg-primary text-white">
            <tr>
                <th>Id</th>
                <th>Pavadinimas</th>
                <th>Pardavėjas</th>
                <th><a class="text-white" href="/admin/adverts?filter=suspended">Suspenduotas</a></th>
                <th><a class="text-white" href="/admin/adverts?filter=reported">Perspėjimų skaičius</a></th>
                <th>Veiksmai</th>
            </tr>
        </thead>
        <tbody>
            @for(int i = 0; i < 5; i++)
            {
                        <tr>
                            <td>@i</td>
                            <td>Skelbimo pavadinimas</td>
                            <td><a href="/admin/adverts?sellerId=1">Pardavėjo vardas ir pavardė</a></td>
                            <td>Ne</td>
                            <td>@i</td>
                            <td>
                                <a href="/user/details/1" title="Peržiūrėti pardavėjo paskyrą"><i class="bi bi-file-person-fill"></i></a>
                                <a href="/admin/adverts" title="Peržiūrėti skelbimo administracinę informaciją"><i class="bi bi-file-richtext-fill"></i></a>
                            </td>
                        </tr>
            }
        </tbody>
    </table>
</div>