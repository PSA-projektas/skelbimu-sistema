@using Skelbimu_sistema.ViewModels
@{
	ViewData["Title"] = "Slaptažodžio keitimas";
}

@model ResetPasswordRequest

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-lg-8 col-md-10">
			<div class="card">
				<div class="card-body">
					<h1 class="text-center">Slaptažodžio keitimas</h1>
					<p class="text-center">Įveskite naują slaptažodį</p>
					<form method="post" asp-action="SubmitResetPassword">
						<input type="hidden" asp-for="Token" />
						<div class="form-group mb-3">
							<label asp-for="Password">Naujas slaptažodis:<span class="text-danger"> *</span></label>
							<input asp-for="Password" type="password" class="form-control" required />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="form-group mb-3">
							<label asp-for="ConfirmPassword">Patvirtinkite slaptažodį:<span class="text-danger"> *</span></label>
							<input asp-for="ConfirmPassword" type="password" class="form-control" required />
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>
						<button type="submit" class="btn btn-primary">Patvirtinti</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>


